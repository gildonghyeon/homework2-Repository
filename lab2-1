#include <stdio.h>
int main() {
char charType;
int integerType;
float floatType;
double doubleType;

printf("----[길동현] [2022041025]----\n\n");  
printf("Sizen of char: %ld byte\n", sizeof(charType)); //charType의 크기를 byte 단위로 출력
printf("Size of int: %ld bytes\n", sizeof(integerType)); //intType의 크기를 byte 단위로 출력
printf("Size of float: %ld bytes\n", sizeof(floatType)); //floatType의 크기를 byte 단위로 출력
printf("Size of double: %ld bytes\n", sizeof(doubleType)); //doubleType의 크기를 byte 단위로 출력

printf("-----------------------------------------\n");

printf("Sizen of char: %ld byte\n", sizeof(char)); //char형의 크기를 byte 단위로 출력
printf("Size of int: %ld bytes\n", sizeof(int)); //int형의 크기를 byte 단위로 출력
printf("Size of float: %ld bytes\n", sizeof(float)); //float의 크기를 byte 단위로 출력
printf("Size of double: %ld bytes\n", sizeof(double)); //double의 크기를 byte 단위로 출력

printf("-----------------------------------------\n");

printf("Sizen of char*: %ld byte\n", sizeof(char*)); //char형의 주소의 크기를 byte 단위로 출력
printf("Size of int*: %ld bytes\n", sizeof(int*)); //int형의 주소의 크기를 byte 단위로 출력
printf("Size of float*: %ld bytes\n", sizeof(float*)); //float형의 주소의 크기를 byte 단위로 출력
printf("Size of double*: %ld bytes\n", sizeof(double*)); //double형의 주소의 크기를 byte 단위로 출력

return 0;}
